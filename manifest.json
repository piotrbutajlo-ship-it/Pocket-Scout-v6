{
  "manifest_version": 3,
  "name": "Pocket Scout v6.0",
  "version": "6.0.0",
  "description": "Pocket Scout v6.0 - Multi-candle historical analysis with 15 indicators, pattern recognition, and adaptive learning for binary options trading.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://pocketoption.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://pocketoption.com/*"],
      "js": [
        "circular-buffer.js",
        "technical-indicators.js",
        "cyclic-decision-engine.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pocket Scout v6.0"
  }
}

